# Environment variables for production deployment

# Server Configuration
PORT=3001
NODE_ENV=production

# Frontend URL (Lovable deployment)
FRONTEND_URL=https://monad-security-monitor.lovable.app

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Blockchain Configuration
MONAD_RPC_URL=https://monad-testnet.drpc.org
CHAIN_ID=10143

# Security Configuration
CORS_ORIGIN=https://monad-security-monitor.lovable.app
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
THREAT_ALERT_WEBHOOK_URL=optional_discord_or_slack_webhook
MONITORING_ENABLED=true
REAL_TIME_SCANNING=true

# Database Configuration
DB_POOL_SIZE=10
DB_TIMEOUT_MS=30000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=monad-security.log

# Health Check Configuration
HEALTH_CHECK_INTERVAL_MS=30000